<%= render 'shared/navbar' %>

<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h1 class="text-center">Skills</h1>
    </div>
    <br>
    <div class="col-md-12">
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Name</th>
            <th>Category</th>
            <th>Users</th>
          </tr>
        </thead>
        <tbody>
          <% @skills.each do |skill| %>
          <tr>
            <td><%= link_to skill.name, skill_path(skill) %></td>
            <td><%= link_to skill.category.name , category_path(skill.category.id)%></td>
            <% skill.users.each do |user| %>
            <td><%= link_to user.name, profile_path(user), method: :get %></td>
            <% end %>
          </tr>
          <% end%>
        </tbody>
      </table>
    </div>
  </div>
</div>
<%= render 'shared/footer' %>

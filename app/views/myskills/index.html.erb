<%= render 'shared/navbar' %>
<div class="main-content">
  <div class="container">
    <div class="row">
      <div>
        <%= link_to 'New skill', new_myskill_path, class: 'btn btn-primary btn-lg' %>
      </div>
      <br>
      <table class="table table-striped ta">
        <tr>
          <th colspan="">Score</th>
          <th colspan="">Category</th>
          <th colspan="">Skill</th>
          <th colspan=""></th>
          <th colspan=""></th>
          <th colspan=""></th>
        </tr>
        <% @myskills.each do |mys| %>
        <tr>
          <td class="star-rating" data-score="<%= mys.score %>"></td>
          <td><%= mys.skill.category.name %></td>
          <td><%= mys.skill.name %></td>
          <td></td>
          <td><%= link_to 'Edit', edit_myskill_path(mys), class: 'btn btn-sm btn-warning' %></td>
          <td><%= link_to 'Remove', myskill_path(mys), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-danger' %></td>
        </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>
<%= render 'shared/footer' %>
<script>
$('.star-rating').raty({
  path: '/assets/',
  readOnly: true,
  score: function() {
    return $(this).attr('data-score');
  }
});
</script>

<%= render 'shared/navbar' %>

<div class="container-fluid">
	<div class="row">
		<div class="col-xs-10 col-xs-offset-1 box">
			<h2 class="text-center">Instructor courses</h2>
			<br>
			<% @courses.each do |course| %>
			<h3><%= link_to course.title, course_path(course) %></h3>
			<br>
			<div class="row">
				<div class="col-xs-12 col-sm-8">
					<p><%= course.title %></p>
				</div>
				<div class="col-xs-12 col-sm-4 text-center">
					<%= link_to "Detailed Info", course_path(course), class: "btn btn-success btn-lg" %>
				</div>
			</div>
			<hr>
			<% end %>
		</div>
	</div>
</div>

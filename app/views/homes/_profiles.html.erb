<section id="profile">
  <div class="container">
    <div class="row">
      <div class="col-lg-12 text-center">
        <h2>Members</h2>
        <p>These are our members</p>
        <hr class="star-primary">
      </div>
    </div>
    <% @users.in_groups_of(3, false) do |user| %>
        <div class="row">
            <% user.each do |u| %>
              <div class="col-md-4 col-sm-4 col-xs-12 profile-item">
                <div class="profile-image">
                  <%# image_tag("#{u.avatar_url}", class: "img-responsive", alt: "Profile Avatar", style: "width: 50 %;") %>
                </div>
                <br>
                <a href="" class="profile-link">
                  <div class="caption">
                    <%= link_to (image_tag("#{u.avatar_url}", class: "img-responsive", alt: "Profile Avatar", style: "width: 50 %;")), profile_path(u.id) %>
                    <small class="author">Joined <%= time_ago_in_words(u.created_at) %> ago.</small>
                  </div>
                </a>
              </div>
            <% end %>
        </div>
  <% end %>
  </div>
</section>

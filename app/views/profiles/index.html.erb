<%= render 'shared/navbar' %>

<div class="container">
  <div class="row">
    <h1 class="text-center">Members</h1>
    <div>
    </div>
    <br>
    <div class="col-md-offset-1">
      <div class="table-responsive">
        <table class="table table-striped table-hover">
          <tr>
            <th>Member</th>
            <th>Name</th>
            <th>Joined</th>
          </tr>
          <% @profiles.each do |profile| %>
          <tr>
            <% if profile.avatar_url %>
            <td>
              <%= link_to (image_tag("#{profile.avatar_url}", class: "img-circle", alt: "Profile Avatar", style: "width: 50px; height: 50px; max-width: 50px;")), profile_path(profile.id) %>
            </td>
            <% end %>
            <td><%= link_to profile.name, profile_path(profile.id) %></td>
            <td><%= time_ago_in_words(profile.created_at) %> ago.</td>
          </tr>
          <% end %>
        </table>
      </div>
    </div>
  </div>
</div>
<%= render 'shared/footer' %>

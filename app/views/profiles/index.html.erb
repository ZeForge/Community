<%= render 'shared/navbar' %>

<div class="container">
  <div class="row">
    <h1 class="text-center">Members</h1>
    <div>
    </div>
    <br>
    <div class="col-md-5 col-md-offset-1">
      <table class="table table-striped">
        <tr>
          <th>Member</th>
          <th></th>
          <th>Joined</th>
        </tr>
        <% @profiles.each do |profile| %>
        <tr>
          <% if profile.avatar_url %>
            <td><img class="img-circle" src="<%= profile.avatar_url %>" alt="Avatar" style="width: 50px; height: 50px; max-width: 50px;"></td>
          <% end %>
          <td><%= link_to profile.name, profile_path(profile.id) %></td>
          <td><%= time_ago_in_words(profile.created_at) %> ago.</td>
        </tr>
        <% end %>
      </table>
    </div>
    <div class="col-md-6">
    </div>
  </div>
</div>
<%= render 'shared/footer' %>
